<!-- Search content -->
<div class="top-content">
    <div class="container">

        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 text">
                <h1 class="wow fadeInLeftBig">Search Recipes you want to cook!!</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 subscribe wow fadeInUp">
                <form class="form-inline" action="/recipe/search" method="post">
                    <div class="form-group">
                        <label class="sr-only" for="subscribe-email">Email address</label>
                        <input type="text" name="search" placeholder="Enter Search Content..." class="subscribe-email form-control" id="subscribe-email">
                    </div>
                    <button type="submit" class="btn">Search
                        <i class="fa fa-angle-right"></i>
                    </button>
                </form>
                <div class="success-message"></div>
                <div class="error-message"></div>
            </div>
        </div>

    </div>
</div>

<!-- Content of Recipes -->
<div class="col-md-12">
    <div class="container">
        <div class="row">

            {{#each obj.recipelist}}
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card">

                    <img class="card-img-top img-fluid" src="..{{imagePath}}" alt="iphone" />


                    <div class="card-body">
                        <a href="/recipe/id/{{_id}}">
                            <h3 class="card-title">{{title}}</h3>
                        </a>
                        <a href="#" class="card-btn" data-toggle="modal" data-target="#myModal{{@index}}">Details</a>
                    </div>

                    <div class="modal fade" id="myModal{{@index}}" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">{{title}}</h4>
                                </div>
                                <div class="modal-body card-text">

                                    <div>
                                        <p>Ingredients:</p>
                                        <ul>
                                            {{#each ingredients}}
                                            <li>
                                                <p>{{name}}&nbsp;&nbsp;&nbsp;&nbsp;{{amount}}</p>

                                            </li>
                                            {{/each}}
                                        </ul>
                                        <p>Steps:</p>
                                        <ul>
                                            {{#each steps}}
                                            <li>
                                                <P>{{this}}</P>
                                            </li>
                                            {{/each}}
                                        </ul>
                                        {{!-- {{#each ingredients}} ingredient: {{name}} amount: {{amount}} {{/each}} steps: {{#each steps}} {{this}} {{/each}} --}}

                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}

        </div>
    </div>
</div>